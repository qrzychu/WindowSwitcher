<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WindowSwitcher.Help">
    <StackPanel>
        <StackPanel.Styles>
            <Style Selector="Label">
                <Setter Property="Margin" Value="0,4,0,0" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </StackPanel.Styles>
        <Label>Move up/down - Ctrl+K/J and arrow keys</Label>
        <Label>Move to next/previous desktop - Ctrl+L/H and arrow keys</Label>
        <Label>Toggle desktop selection - Ctrl+G</Label>
        <Label>Close window - Ctrl+D</Label>
    </StackPanel>
</UserControl>
